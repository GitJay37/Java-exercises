package Main;

public class Calc {
	
	//Integers
	public int suma(int... numbers) {
			int suma = 0;
			for(number : numbers) {
				suma += number;
			}
	}
	
	public int suma(int val1, int val2, int val3) {
		return val1 + val2 + val3;
	}
	
	public int suma() {
		return 0;
	}
	
	//Floats
	public float suma(float val1, float val2) {
		return val1 - val2;
	}
	
	public float suma(float val1, float val2, float val3) {
		return val1 + val2 + val3;
	}
	
	//Doubles
	public double suma(double val1, double val2) {
		return val1 + val2;
	}
	
	public double suma(double val1, double val2, double val3) {
		return val1 + val2 + val3;
	}
}
